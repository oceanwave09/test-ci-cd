POSTGRES_ROOT_PASSWORD=postgres
POSTGRES_ROOT_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_USER=postgres
POSTGRES_HOST=fhir-db
POSTGRES_DB=fhirdb
POSTGRES_PORT=54320

KAFKA_BROKERS=kafka:9092,localhost:29092
KAFKA_CONSUMER_GROUP="patient-service"
KAFKA_DISABLED=false
# KAFKA_DISABLED=true

PATIENT_PORT=5001
PROVIDER_PORT=5002
MEMBER_PORT=5003
FINANCIAL_PORT=5004

PATIENT_BASE_URL=http://host.docker.internal:5001
PROVIDER_BASE_URL=http://host.docker.internal:5002
MEMBER_BASE_URL=http://host.docker.internal:5003

# Default userId if no Authorization token sent or userId is missed inside it
AUTH_DISABLED=true
AUTH_DEFAULT_USER_ID=local_pc

# ACCESS_TOKEN to allow Docker access to HEC private GitLab Go Modules; can be a Personal Access Token
ACCESS_TOKEN=

# output sql query generated by bun to console
# BUN_DEBUG=0 - disables the bundebug hook.
# BUN_DEBUG=1 - enables the bundebug hook, logs failed queries
# BUN_DEBUG=2 - enables the bundebug hook and verbose mode. logs all queries
BUN_DEBUG=0

# Other services settings. 
# set PATIENT_ORGANIZATION_MATCH_ENABLED=false if you don't have Provider service locally and want to skip organization match requests.
PROVIDER_SERVICE_URL=http://host.docker.internal:5002/
PRACTITIONER_ROLE_ORGANIZATION_MATCH_ENABLED=true
ORGANIZATION_SERVICE_URL=http://host.docker.internal:5002/
PATIENT_ORGANIZATION_MATCH_ENABLED=true
OBSERVATION_SUBJECT_LOCATION_MATCH_ENABLED=true
OBSERVATION_PERFORMER_PRACTITIONER_MATCH_ENABLED=true
OBSERVATION_PERFORMER_PRACTITIONER_ROLE_MATCH_ENABLED=true
OBSERVATION_PERFORMER_ORGANIZATION_MATCH_ENABLED=true
ENCOUNTER_LOCATION_MATCH_ENABLED=true
ENCOUNTER_SERVICE_PROVIDER_MATCH_ENABLED=true

# Tracing settings
# Allowed values for TRACING_EXPORTER_TYPE are `console`,`jaeger`
# Allowed values for TRACING_PROPAGATOR_TYPE are `jaeger`
# Value for TRACING_SAMPLE_RATIO must be between 0.0 and 1.0, inclusively. 0.0 means "do not export anything", 1.0 means "export everything". 
TRACING_SAMPLE_RATIO=0.0
TRACING_EXPORTER_TYPE=console
TRACING_EXPORTER_ENDPOINT=http://localhost:14268/api/traces
TRACING_PROPAGATOR_TYPE=jaeger

# CORS Settings
# Leaving allowed origins empty should allow connection from anywhere;
# if adding restricted origins, they should be comma delimited.

ALLOWED_ORIGINS=*
